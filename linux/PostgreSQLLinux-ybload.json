			}, {
				"rep_type":	"kAR_DATA_TYPE_TIMESTAMP",
				"provider_data_type":	"TIMESTAMP",
				"has_scale_condition":	true,
				"to_scale":	6
			}, {
				"rep_type":	"kAR_DATA_TYPE_TIMESTAMP",
				"provider_data_type":	"VARCHAR(37)",
				"has_scale_condition":	true,
				"from_scale":	7,
				"to_scale":	12
			}, {
				"rep_type":	"kAR_DATA_TYPE_I1",

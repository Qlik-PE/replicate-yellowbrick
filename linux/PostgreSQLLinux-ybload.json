{
	"name":	"PostgreSQLLinux",
	"repository.provider_syntax":	{
		"name":	"PostgreSQLLinux",
		"query_syntax":	{
			"create_primary_key":	"ALTER TABLE ${QO}${TABLE_OWNER}${QC}.${QO}${TABLE_NAME}${QC} ADD PRIMARY KEY ( ${COLUMN_LIST} )",
			"modify_column":	"ALTER TABLE ${QO}${TABLE_OWNER}${QC}.${QO}${TABLE_NAME}${QC} ALTER COLUMN ${QO}${COLUMN_NAME}${QC} SET DATA TYPE ${COLUMN_TYPE}",
			"error_code_constraint_violation":	"23000,23502,23505",
			"error_code_data_failure":	"22P02",
			"bulk_update_syntax":	"FROM_AT_THE_END",
			"csv_null_value":	"attNULL",
			"load_data_exe_name":	"ybload.sh",
			"load_data_exe_params":	"-h ${SERVER} -p ${PORT} -U ${USER_NAME} -w -d ${DATABASE} -c \"\"\"\\\\copy \\\"\"${TABLE_OWNER}\\\"\".\\\"\"${TABLE_NAME}\\\"\" from '${FILENAME}' WITH DELIMITER ',' CSV NULL 'attNULL' ESCAPE '\\\\'\"\"\"",
			"bulk_delete_syntax":	"USING_CLAUSE",
			"error_code_table_error":	"42P01,42804",
			"bulk_ignore_binary":	false,
			"csv_string_escape":	"\\",
			"support_wchar":	false,
			"char_length_in_bytes":	3,
			"load_exe_network_error_codes":	"2",
			"csv_escape_control_char":	false,
			"create_temporary_table":	"CREATE UNLOGGED TABLE ${QO}${TABLE_OWNER}${QC}.${QO}${TABLE_NAME}${QC} ( ${COLUMN_LIST}, PRIMARY KEY (${PK_COLUMN_LIST}))",
			"character_semantic":	"CHARS",
			"truncate_too_long_data_in_columns":	true,
			"load_exe_data_error_codes":	"1"
		},
		"data_type_mapping":	[{
				"rep_type":	"kAR_DATA_TYPE_BOOL",
				"provider_data_type":	"BOOL"
			}, {
				"rep_type":	"kAR_DATA_TYPE_BYTES",
